<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leoci.calculadora2.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextConta"
        android:enabled="false"
        android:gravity="right"
        android:lines="2"
        android:maxLines="2"
        android:textSize="10sp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:enabled="false"
        android:gravity="right"
        android:lines="2"
        android:maxLines="2"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@+id/editTextConta"/>

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:id="@+id/button7"
        android:textSize="20sp"/>

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:id="@+id/button8"
        android:textSize="20sp"
        android:layout_toRightOf="@id/button7"/>

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:id="@+id/button9"
        android:textSize="20sp"
        android:layout_toRightOf="@id/button8"/>

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:id="@+id/buttonC"
        android:textSize="20sp"
        android:layout_toRightOf="@id/button9"/>

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:id="@+id/button4"
        android:textSize="20sp"/>

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@id/button4"
        android:id="@+id/button5"
        android:textSize="20sp"/>

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@id/button5"
        android:id="@+id/button6"
        android:textSize="20sp"/>

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonC"
        android:layout_toRightOf="@id/button6"
        android:id="@+id/buttonDividir"
        android:textSize="20sp"/>

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:id="@+id/button1"
        android:textSize="20sp"/>

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@id/button1"
        android:id="@+id/button2"
        android:textSize="20sp"/>

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@id/button2"
        android:id="@+id/button3"
        android:textSize="20sp"/>

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDividir"
        android:layout_toRightOf="@id/button3"
        android:id="@+id/buttonMultiplicar"
        android:textSize="20sp"/>

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:id="@+id/button0"
        android:textSize="20sp"/>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@id/button0"
        android:id="@+id/buttonSomar"
        android:textSize="20sp"/>

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@id/buttonSomar"
        android:id="@+id/buttonSubtrair"
        android:textSize="20sp"/>

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMultiplicar"
        android:layout_toRightOf="@id/buttonSubtrair"
        android:id="@+id/buttonPonto"
        android:textSize="20sp"/>

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button0"
        android:id="@+id/buttonIgual"
        android:textSize="20sp"
        android:width="351dp"/>

    <TextView
        android:text="GuardaValor2: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGuardaValor2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textViewGuardaValor1"
        android:layout_alignStart="@+id/textViewGuardaValor1"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="GuardaValor1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGuardaValor1"
        android:layout_above="@+id/textViewGuardaValor2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="25dp" />

    <TextView
        android:text="Operador: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOperador"
        android:layout_above="@+id/textViewGuardaValor1"
        android:layout_alignLeft="@+id/textViewGuardaValor1"
        android:layout_alignStart="@+id/textViewGuardaValor1"
        android:layout_marginBottom="14dp" />

</RelativeLayout>
